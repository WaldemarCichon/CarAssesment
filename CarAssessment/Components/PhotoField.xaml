<?xml version="1.0" encoding="UTF-8" ?>
<Grid
    x:Class="CarAssessment.Components.PhotoField"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="250" />
    </Grid.RowDefinitions>
    <Label x:Name="TitleLabel" FontAttributes="Bold" />
    <ImageButton
        x:Name="Image"
        Grid.Row="1"
        Clicked="Image_Clicked"
        HeightRequest="250"
        IsVisible="True" />
    <StackLayout
        x:Name="ButtonStack"
        Grid.Row="1"
        HorizontalOptions="Center"
        Orientation="Horizontal">
        <Button
            x:Name="MakePhotoButton"
            Padding="15,0"
            Clicked="MakePhotoButton_Clicked"
            FontFamily="{StaticResource FontAwesomeSolid}"
            FontSize="24"
            HorizontalOptions="Center"
            Text=""
            VerticalOptions="CenterAndExpand" />
        <Button
            x:Name="GetPhotoButton"
            Padding="15,0"
            Clicked="GetPhotoButton_Clicked"
            FontFamily="{StaticResource FontAwesomeSolid}"
            FontSize="24"
            HorizontalOptions="Center"
            Text="&#xf87c;"
            VerticalOptions="Center" />

    </StackLayout>
</Grid>
