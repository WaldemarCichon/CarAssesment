<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="CarAssessment.Views.NewItemPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:local="clr-namespace:CarAssessment.Components"
    xmlns:sig="clr-namespace:SignaturePad.Forms;assembly=SignaturePad.Forms"
    Title="New Item"
    ios:Page.UseSafeArea="true">
    <!--  Shell.PresentationMode="ModalAnimated"  -->
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackLayout>
                <Label
                    Margin="0,5,0,0"
                    FontAttributes="Bold"
                    FontSize="40"
                    HorizontalOptions="Center"
                    Text="Kfz-Gutachten Version 0.1" />
                <BoxView
                    Margin="10,0,10,0"
                    AutomationId="1"
                    CornerRadius="30"
                    HeightRequest="100"
                    HorizontalOptions="FillAndExpand"
                    Color="GreenYellow" />
                <Label
                    Margin="0,-80,0,0"
                    AutomationId="1"
                    FontSize="40"
                    HorizontalOptions="Center"
                    Text="Grunddaten" />
                <BoxView
                    Margin="10,25,10,0"
                    AutomationId="2"
                    CornerRadius="30"
                    HeightRequest="100"
                    HorizontalOptions="FillAndExpand"
                    Color="LightGray" />
                <Label
                    Margin="0,-80,0,40"
                    AutomationId="2"
                    FontSize="40"
                    HorizontalOptions="Center"
                    Text="Fahrzeugbilder" />
                <BoxView
                    Margin="10,25,10,0"
                    AutomationId="3"
                    CornerRadius="30"
                    HeightRequest="100"
                    HorizontalOptions="FillAndExpand"
                    Color="LightGray" />
                <Label
                    Margin="0,-80,0,40"
                    AutomationId="3"
                    FontSize="40"
                    HorizontalOptions="Center"
                    Text="Schadensbilder" />
                <BoxView
                    Margin="10,25,10,0"
                    AutomationId="4"
                    CornerRadius="30"
                    HeightRequest="100"
                    HorizontalOptions="FillAndExpand"
                    Color="LightGray" />
                <Label
                    Margin="0,-80,0,40"
                    AutomationId="4"
                    FontSize="40"
                    HorizontalOptions="Center"
                    Text="Reifen" />
                <BoxView
                    Margin="10,25,10,0"
                    AutomationId="5"
                    CornerRadius="30"
                    HeightRequest="100"
                    HorizontalOptions="FillAndExpand"
                    Color="LightGray" />
                <Label
                    Margin="0,-80,0,40"
                    AutomationId="5"
                    FontSize="40"
                    HorizontalOptions="Center"
                    Text="Fahrzeugdaten" />
                <BoxView
                    Margin="10,25,10,0"
                    AutomationId="6"
                    CornerRadius="30"
                    HeightRequest="100"
                    HorizontalOptions="FillAndExpand"
                    Color="LightGray" />
                <Label
                    Margin="0,-80,0,40"
                    AutomationId="6"
                    FontSize="40"
                    HorizontalOptions="Center"
                    Text="Reparatur" />
                <BoxView
                    Margin="10,25,10,0"
                    AutomationId="7"
                    CornerRadius="30"
                    HeightRequest="100"
                    HorizontalOptions="FillAndExpand"
                    Color="LightGray" />
                <Label
                    Margin="0,-80,0,40"
                    AutomationId="7"
                    FontSize="40"
                    HorizontalOptions="Center"
                    Text="????" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Clicked="Previous"
                        FontFamily="{StaticResource FontAwesomeSolid}"
                        HorizontalOptions="Center"
                        Text="&#xf30a;"
                        WidthRequest="200" />
                    <Button
                        Grid.Column="1"
                        Clicked="Up"
                        HorizontalOptions="Center"
                        Text="^^^"
                        WidthRequest="200" />
                    <Button
                        Grid.Column="2"
                        Clicked="Next"
                        HorizontalOptions="Center"
                        Text="&gt;&gt;&gt;"
                        WidthRequest="200" />
                </Grid>
            </StackLayout>
            <ScrollView Grid.Row="1">
                <Grid
                    Padding="2,0,2,0"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <!--#region Main Data-->
                    <BoxView
                        Grid.Row="0"
                        Grid.RowSpan="5"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Color="Aqua" />
                    <local:TitledEntryField
                        Title="Fahrzeughalter"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="10,4"
                        AutomationId="1"
                        Text="{Binding OwnerName}" />
                    <local:TitledEntryField
                        Title="Straße"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="10,4"
                        AutomationId="1"
                        Text="{Binding Street}" />
                    <local:TitledEntryField
                        Title="PLZ"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="10,4"
                        AutomationId="1"
                        Text="{Binding ZipCode}" />
                    <local:TitledEntryField
                        Title="Ort"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="10,4"
                        AutomationId="1"
                        Text="{Binding City}" />
                    <local:TitledEntryField
                        Title="Kfz-Kennzeichen Mandant"
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="10,4"
                        AutomationId="1"
                        Text="{Binding LicensePlateClient}" />
                    <local:TitledEntryField
                        Title="Kfz-Kennzeichen Unfallgegner"
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="10,4"
                        AutomationId="1"
                        Text="{Binding LicensePlateOponent}" />
                    <local:TitledEntryField
                        Title="Aufnahmedatum"
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="10,4"
                        AutomationId="1"
                        Text="{Binding AdmissionDate}" />
                    <local:TitledEntryField
                        Title="Unfalldatum"
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="10,4"
                        AutomationId="1"
                        Text="{Binding AccidentDate}" />
                    <local:TitledEditorField
                        Title="Besichtigungsort"
                        Grid.Row="4"
                        Margin="10,4"
                        AutomationId="1"
                        Text="{Binding InspectionLocation}" />
                    <local:TitledEditorField
                        Title="Teilehmer Besichtigung"
                        Grid.Row="4"
                        Grid.Column="1"
                        Margin="10,4,10,10"
                        AutomationId="1"
                        Text="{Binding InspectionAttendees}" />
                    <!--#endregion-->
                    <!--#region Total Photos-->
                    <local:PhotoField
                        x:Name="FrontLeftPhoto"
                        Title="Vorne Links"
                        Grid.Row="5"
                        Grid.Column="0"
                        AutomationId="2"
                        HorizontalOptions="FillAndExpand"
                        ImagePath="{Binding FrontLeftPhotoPath, Mode=TwoWay}" />
                    <local:PhotoField
                        x:Name="FrontRightPhoto"
                        Title="Vorne Rechts"
                        Grid.Row="5"
                        Grid.Column="1"
                        AutomationId="2"
                        HorizontalOptions="FillAndExpand"
                        ImagePath="{Binding FrontRightPhotoPath, Mode=TwoWay}" />

                    <local:PhotoField
                        x:Name="RearLeftPhoto"
                        Title="Hinten Links"
                        Grid.Row="6"
                        Grid.Column="0"
                        AutomationId="2"
                        HorizontalOptions="FillAndExpand"
                        ImagePath="{Binding RearLeftPhotoPath, Mode=TwoWay}" />


                    <local:PhotoField
                        x:Name="RearRightPhoto"
                        Title="Hinten Rechts"
                        Grid.Row="6"
                        Grid.Column="1"
                        AutomationId="2"
                        HorizontalOptions="FillAndExpand"
                        ImagePath="{Binding RearRightPhotoPath, Mode=TwoWay}" />

                    <!--#endregion-->
                    <local:TitledEntryField
                        Title="Fahrgestellnummer"
                        Grid.Row="7"
                        Grid.Column="0"
                        AutomationId="6"
                        Text="{Binding ChassisNumber}" />
                    <local:TitledEntryField
                        Title="Kilometerstand"
                        Grid.Row="7"
                        Grid.Column="1"
                        AutomationId="6"
                        Text="{Binding Mileage}" />
                    <!--#region Damage Photos-->
                    <Label
                        Grid.Row="8"
                        Grid.Column="0"
                        AutomationId="3"
                        FontAttributes="Bold"
                        HorizontalOptions="FillAndExpand"
                        Text="Übersichtsfotos"
                        VerticalOptions="Center" />

                    <Label
                        Grid.Row="8"
                        Grid.Column="1"
                        AutomationId="3"
                        FontAttributes="Bold"
                        HorizontalOptions="FillAndExpand"
                        Text="Nahaufnahme"
                        VerticalOptions="Center" />

                    <Label
                        Grid.Row="10"
                        Grid.Column="0"
                        AutomationId="3"
                        FontAttributes="Bold"
                        HorizontalOptions="FillAndExpand"
                        Text="Detailsfotos"
                        VerticalOptions="Center" />

                    <Label
                        Grid.Row="10"
                        Grid.Column="1"
                        AutomationId="3"
                        FontAttributes="Bold"
                        HorizontalOptions="FillAndExpand"
                        Text="Sonstige Aufnahmen"
                        VerticalOptions="Center" />

                    <local:PhotoCollectionField
                        x:Name="DamagePhotos"
                        Grid.Row="9"
                        AutomationId="3" />
                    <local:PhotoCollectionField
                        x:Name="NearbyPhotos"
                        Grid.Row="9"
                        Grid.Column="1"
                        AutomationId="3" />
                    <local:PhotoCollectionField
                        x:Name="DetailPhotos"
                        Grid.Row="11"
                        Grid.Column="0"
                        AutomationId="3" />
                    <local:PhotoCollectionField
                        x:Name="OtherPhotos"
                        Grid.Row="11"
                        Grid.Column="1"
                        AutomationId="3" />

                    <!--#endregion-->
                    <!--#region Tire-->
                    <Label
                        Grid.Row="15"
                        Grid.ColumnSpan="2"
                        AutomationId="4"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        Text="Reifen" />
                    <Grid Grid.Row="16" AutomationId="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label
                            Margin="2,0,2,0"
                            HorizontalOptions="StartAndExpand"
                            Text="Vorne Links"
                            VerticalOptions="Center" />
                        <local:TitledEntryField
                            Title="Hersteller"
                            Grid.Column="1"
                            Text="{Binding FrontLeft.Manufacturer}" />
                        <local:TitledEntryField
                            Title="Profiltiefe"
                            Grid.Column="2"
                            Text="{Binding FrontLeft.TreadDepth}" />
                    </Grid>
                    <Grid
                        Grid.Row="16"
                        Grid.Column="1"
                        AutomationId="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label
                            Margin="2,0,2,0"
                            HorizontalOptions="StartAndExpand"
                            Text="Vorne Rechts"
                            VerticalOptions="Center" />
                        <local:TitledEntryField
                            Title="Hersteller"
                            Grid.Column="1"
                            Text="{Binding FrontRight.Manufacturer}" />
                        <local:TitledEntryField
                            Title="Profiltiefe"
                            Grid.Column="2"
                            Text="{Binding FrontRight.TreadDepth}" />
                    </Grid>
                    <Grid Grid.Row="17" AutomationId="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label
                            Margin="2,0,2,0"
                            HorizontalOptions="StartAndExpand"
                            Text="Hinten Links"
                            VerticalOptions="Center" />
                        <local:TitledEntryField
                            Title="Hersteller"
                            Grid.Column="1"
                            Text="{Binding RearLeft.Manufacturer}" />
                        <local:TitledEntryField
                            Title="Profiltiefe"
                            Grid.Column="2"
                            Text="{Binding RearLeft.TreadDepth}" />
                    </Grid>
                    <Grid
                        Grid.Row="17"
                        Grid.Column="1"
                        AutomationId="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label
                            Margin="2,0,2,0"
                            HorizontalOptions="StartAndExpand"
                            Text="Hinten Rechts"
                            VerticalOptions="Center" />
                        <local:TitledEntryField
                            Title="Hersteller"
                            Grid.Column="1"
                            Text="{Binding RearRight.Manufacturer}" />
                        <local:TitledEntryField
                            Title="Profiltiefe"
                            Grid.Column="2"
                            Text="{Binding RearRight.TreadDepth}" />
                    </Grid>
                    <!--#endregion-->
                    <!--#region Car Data-->
                    <Label
                        Grid.Row="18"
                        AutomationId="5"
                        Text="Scheckheft vorhanden?"
                        VerticalOptions="Center" />
                    <CheckBox
                        Grid.Row="18"
                        Margin="350,0,0,0"
                        AutomationId="5"
                        HeightRequest="100"
                        IsChecked="{Binding IsServiceRecordBook}" />
                    <local:PhotoField
                        x:Name="Scheckheft"
                        Grid.Row="18"
                        Grid.Column="1"
                        AutomationId="5"
                        HeightRequest="200"
                        HorizontalOptions="Center"
                        ImagePath="{Binding ServiceRecordsPhotoPath, Mode=TwoWay}" />
                    <StackLayout
                        Grid.Row="19"
                        Grid.Column="0"
                        AutomationId="5"
                        Orientation="Horizontal">
                        <Label Text="Kfz verkehrssicher?" VerticalOptions="Center" />
                        <CheckBox />
                        <Label Text="Kfz fahrbereit?" VerticalOptions="Center" />
                        <CheckBox />
                    </StackLayout>
                    <StackLayout
                        Grid.Row="19"
                        Grid.Column="1"
                        AutomationId="5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Horizontal">
                        <local:PhotoField
                            x:Name="CarDocument"
                            Title="Fahrzeugschein"
                            ImagePath="{Binding CarDocumentPath, Mode=TwoWay}" />
                    </StackLayout>
                    <!--#endregion-->
                    <!--#region Repair-->
                    <Label
                        Grid.Row="21"
                        Grid.ColumnSpan="2"
                        AutomationId="6"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        Text="Reparatur" />
                    <Label
                        Grid.Row="22"
                        AutomationId="6"
                        Text="Reparatur gewünscht?"
                        VerticalOptions="Center" />
                    <CheckBox
                        Grid.Row="22"
                        Margin="200,0,0,0"
                        AutomationId="6" />
                    <local:TitledEntryField
                        Title="Werkstatt"
                        Grid.Row="22"
                        Grid.Column="1"
                        AutomationId="6" />
                    <Label
                        Grid.Row="23"
                        Grid.ColumnSpan="2"
                        AutomationId="6"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        Text="Stundensätze" />
                    <Grid
                        Grid.Row="24"
                        Grid.ColumnSpan="2"
                        AutomationId="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />

                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <local:TitledEntryField Title="Elektrik" Text="{Binding HourlyRateElectric}" />
                        <local:TitledEntryField
                            Title="Karosserie"
                            Grid.Column="1"
                            Text="{Binding HourlyRateBody}" />
                        <local:TitledEntryField
                            Title="UPE-Aufschläge"
                            Grid.Column="2"
                            Text="{Binding UPESurcharge}" />
                        <local:TitledEntryField
                            Title="Kleinteile-Aufschlag"
                            Grid.Column="3"
                            Text="{Binding SmallPartsS}" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            Text="Lackierung"
                            VerticalOptions="Center" />
                        <local:TitledEntryField
                            Title="Pauschal"
                            Grid.Row="1"
                            Grid.Column="1"
                            Text="{Binding FlatRatePainting}" />
                        <local:TitledEntryField
                            Title="Lackzuschlag %"
                            Grid.Row="1"
                            Grid.Column="2"
                            Text="{Binding HourlyRatePaintingSurcharge}" />
                        <local:TitledEntryField
                            Title="Lackpunkt"
                            Grid.Row="1"
                            Grid.Column="3"
                            Text="{Binding HourlyRatePaintingPoint}" />
                        <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            Text="Verbringung"
                            VerticalOptions="Center" />
                        <local:TitledEntryField
                            Title="Zeit"
                            Grid.Row="2"
                            Grid.Column="1"
                            Text="{Binding TimedRateTransport}" />
                        <local:TitledEntryField
                            Title="Pauschal"
                            Grid.Row="2"
                            Grid.Column="2"
                            Text="{Binding FlatRateTransport}" />

                    </Grid>
                    <StackLayout
                        Grid.Row="25"
                        AutomationId="6"
                        Orientation="Horizontal">
                        <Label Text="Mietwagen erwünscht?" VerticalOptions="Center" />
                        <CheckBox IsChecked="{Binding RentalCar}" />
                        <Label Text="Berechtigt" VerticalOptions="Center" />
                        <CheckBox IsChecked="{Binding IsEligible}" />
                    </StackLayout>
                    <!--#endregion-->
                    <!--#region Damage description-->
                    <Label
                        Grid.Row="26"
                        Grid.ColumnSpan="2"
                        AutomationId="7"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        Text="Schadensschilderung" />
                    <StackLayout
                        Grid.Row="27"
                        Grid.ColumnSpan="2"
                        AutomationId="7"
                        Orientation="Horizontal">
                        <Label Text="Unser Kunde" VerticalOptions="Center" />
                        <CheckBox Margin="0,0,-25,0" IsChecked="{Binding MustSlowDown}" />
                        <Label Text="musste verkehrbedingt bremsen" VerticalOptions="Center" />
                    </StackLayout>
                    <StackLayout
                        Grid.Row="28"
                        Grid.ColumnSpan="2"
                        AutomationId="7"
                        Orientation="Horizontal">
                        <Label Text="Unfallgegner" VerticalOptions="Center" />
                        <CheckBox Margin="0,0,-25,0" IsChecked="{Binding WasDriving}" />
                        <Label Text="fuhr" VerticalOptions="Center" />
                        <CheckBox Margin="0,0,-25,0" IsChecked="{Binding DroveAgainst}" />
                        <Label Text="fuhr auf" VerticalOptions="Center" />
                        <CheckBox Margin="0,0,-25,0" IsChecked="{Binding CameFromMinorStreet}" />
                        <Label Text="kam aus untergeordneter Straße" VerticalOptions="Center" />
                    </StackLayout>
                    <StackLayout
                        Grid.Row="29"
                        Grid.ColumnSpan="2"
                        AutomationId="7"
                        Orientation="Horizontal">
                        <CheckBox Margin="0,0,-25,0" IsChecked="{Binding DroveBackwards}" />
                        <Label Text="fuhr rückwärts" VerticalOptions="Center" />
                        <CheckBox Margin="0,0,-25,0" IsChecked="{Binding AgainstParkingCar}" />
                        <Label Text="gegen parkendes Kfz" VerticalOptions="Center" />
                        <CheckBox Margin="0,0,-25,0" IsChecked="{Binding AgainstStoppedCustomer}" />
                        <Label Text="gegen stendenden Kunden" VerticalOptions="Center" />
                    </StackLayout>
                    <StackLayout
                        Grid.Row="30"
                        Grid.ColumnSpan="2"
                        Orientation="Horizontal">
                        <CheckBox Margin="0,0,-25,0" IsChecked="{Binding AgainstDrivingCustomer}" />
                        <Label Text="gegen vorbeifahrenden Kunden" VerticalOptions="Center" />
                        <CheckBox Margin="0,0,-25,0" IsChecked="{Binding AgainstDrivingCustomer}" />
                        <Label Text="fuhr über Rot" VerticalOptions="Center" />
                        <CheckBox Margin="0,0,-25,0" IsChecked="{Binding OverStop}" />
                        <Label Text="fuhr über Stoppschild" VerticalOptions="Center" />
                    </StackLayout>
                    <StackLayout
                        Grid.Row="31"
                        Grid.ColumnSpan="2"
                        AutomationId="7"
                        Orientation="Horizontal">
                        <CheckBox Margin="0,0,-25,0" IsChecked="{Binding DisobeyingRightLeft}" />
                        <Label Text="rechts vor links missachtet" VerticalOptions="Center" />
                        <CheckBox Margin="0,0,-25,0" IsChecked="{Binding TooFast}" />
                        <Label Text="war zu schnell" VerticalOptions="Center" />
                        <CheckBox Margin="0,0,-25,0" IsChecked="{Binding ChangedLane}" />
                        <Label Text="wechselte die Spur" VerticalOptions="Center" />
                        <CheckBox Margin="0,0,-25,0" IsChecked="{Binding OverlookedCustomer}" />
                        <Label Text="übersah unseren Kunden" VerticalOptions="Center" />
                    </StackLayout>
                    <local:TitledEditorField
                        Title="Schriftliche Schilderung"
                        Grid.Row="32"
                        Grid.RowSpan="2"
                        AutomationId="7"
                        HeightRequest="150"
                        Text="{Binding Description}" />
                    <local:TitledEntryField
                        Title="Ort des Unfalls"
                        Grid.Row="32"
                        Grid.Column="1"
                        AutomationId="7"
                        Text="{Binding AccidentLocation}" />
                    <local:TitledEntryField
                        Title="Genauer Zeitpunkt des Unfalls"
                        Grid.Row="33"
                        Grid.Column="1"
                        AutomationId="7"
                        Text="{Binding AccidentTimestamp}" />
                    <StackLayout
                        Grid.Row="34"
                        AutomationId="7"
                        Orientation="Horizontal">
                        <Label Text="Polizeibereicht vorhanden?" VerticalOptions="Center" />
                        <CheckBox IsChecked="{Binding IsPoliceReport, Mode=TwoWay}" />

                    </StackLayout>
                    <local:PhotoField
                        x:Name="PoliceReport"
                        Grid.Row="34"
                        Grid.Column="1"
                        AutomationId="7"
                        ImagePath="{Binding PoliceReportPhotoPath}"
                        IsVisible="{Binding IsPoliceReport, Mode=OneWay}" />
                    <Label
                        Grid.Row="35"
                        Grid.ColumnSpan="2"
                        AutomationId="7"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        Text="Anwalt" />
                    <StackLayout
                        Grid.Row="36"
                        AutomationId="7"
                        Orientation="Horizontal">
                        <Label Text="Anwalt erwünscht:" />
                        <CheckBox IsChecked="{Binding WantAdvocate}" />
                        <Label Text="Unser Anwalt" />
                        <CheckBox IsChecked="{Binding IsRecommendedAdvocate}" />
                    </StackLayout>
                    <local:TitledEntryField
                        Title="Empfohlener Anwalt"
                        Grid.Row="36"
                        Grid.Column="1"
                        AutomationId="7"
                        IsVisible="false"
                        Text="{Binding RecommendedAdvocate}" />
                    <local:TitledEntryField
                        Title="Anwalt des Kunden"
                        Grid.Row="36"
                        Grid.Column="1"
                        AutomationId="7"
                        Text="{Binding CustomersAdvocate}" />
                    <Label
                        Grid.Row="37"
                        Grid.ColumnSpan="2"
                        AutomationId="7"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        Text="Weitere Mandantendaten" />
                    <local:TitledEntryField
                        Title="Telefon"
                        Grid.Row="38"
                        Grid.Column="0"
                        AutomationId="7"
                        Text="{Binding Phone}" />
                    <local:TitledEntryField
                        Title="Email"
                        Grid.Row="38"
                        Grid.Column="1"
                        AutomationId="7"
                        Text="{Binding Email}" />
                    <local:TitledEntryField
                        Title="Schadensnummer"
                        Grid.Row="39"
                        Grid.Column="0"
                        AutomationId="7"
                        Text="{Binding DamageId}" />
                    <local:TitledEntryField
                        Title="Versicherungsnummer"
                        Grid.Row="39"
                        Grid.Column="1"
                        AutomationId="7"
                        Text="{Binding InsuranceId}" />
                    <local:TitledEditorField
                        Title="Sonstiges"
                        Grid.Row="40"
                        Grid.ColumnSpan="2"
                        AutomationId="7"
                        Text="{Binding Miscellanious}" />
                    <StackLayout
                        Grid.Row="41"
                        Grid.ColumnSpan="2"
                        AutomationId="7"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Horizontal"
